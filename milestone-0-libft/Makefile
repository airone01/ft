include $(realpath ../extra-make/art.mk) # GPM!
COLOR			= $(COLOR_LIBFT)

# **************************************************************************** #
#                                   METADATA                                   #
# **************************************************************************** #

GPM_MSTONE	:= 0
GPM_NAME	:= libft
GPM_MNAME	:= LIBFT
NAME		:= libft.a
BNAME		:= blibft.a
OUT_DIR 	:= .out/

# **************************************************************************** #
#                                   TARGETS                                    #
# **************************************************************************** #

all: title $(NAME)

title:
	@$(ECHO) "$(MSG)   ___ __   _____\n"
	@$(ECHO) "$(MSG)  / (_) /  / _/ /_\n"
	@$(ECHO) "$(MSG) / / / _ \\/ _/ __/\n"
	@$(ECHO) "$(MSG)/_/_/_.__/_/ \\__/\n"
	@$(ECHO) "$(MSG)\n"

include $(realpath ../extra-make/targets_common.mk) # GPM!
